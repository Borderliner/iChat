doctype html
html(lang=en, xmlns:ng='http://angularjs.org')
  head
    title= title
  body
    div
      if userFullName
        h3
          | Welcome,
          = ' ' + userFullName
        br
        a(href='/signout')
      else
        h3 Welcome!
        br
        a(href='/signup') Sign Up
        br
        a(href='/signin') Sign In

    section
      input(type='text', id='text1', ng-model='name')
      input(type='text', id='text2', ng-model='name')

    script(type='text/javascript', src='/lib/angular/angular.min.js')
    script(type='text/javascript', src='/application.js')
    script(type='text/javascript', src='/example/example.client.module.js')
