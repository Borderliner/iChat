doctype html
html(lang=en, xmlns:ng='http://angularjs.org')
  head
    title= title
    link(type='text/css', rel='stylesheet', href='/lib/Materialize/dist/css/materialize.min.css', media='screen, projection')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
  body
    nav.light-blue.lighten-1(role='navigation')
      div.nav-wrapper.container
        a#logo-container.brand-logo(href='#!') iChat
        ul.right.hide-on-med-and-down
          if userObject
            li
              a(href='/signout') Logout
          else
            li
              a(href='/signup') Register
            li
              a(href='/signin') Login
        ul#nav-mobile.side-nav
          li
            a(href='') Navbar Link
        a.button-collapse(data-activities='nav-mobile', href='#!', onclick='$(".button-collapse").sideNav();')
          i.material-icons menu


    div.section.no-pad-bot#index-banner
      div.container
        br
        br
        if userObject
          h1.header.center.orange-text Welcome back,
          h5.header.center.black-text
            =userFullName
          br
        else
          h1.header.center.orange-text Welcome!
          br

    section(ng-view)

    if userObject
      script
        | window.user = 
        = userObject
        | ;
    
    srcipt(type='text/javascript', src='/lib/jquery/dist/jquery.min.js')
    srcipt(type='text/javascript', src='/lib/Materialize/dist/js/materialize.min.js')
    script(type='text/javascript', src='/lib/angular/angular.min.js')
    script(type='text/javascript', src='/lib/angular-route/angular-route.min.js')
    script(type='text/javascript', src='/application.js')
    script(type='text/javascript', src='/example/example.client.module.js')
    script(type='text/javascript', src='/example/config/example.client.routes.js')
    script(type='text/javascript', src='/example/controllers/example.client.controller.js')
    script(type='text/javascript', src='/users/users.client.module.js')
    script(type='text/javascript', src='/users/services/authentication.client.service.js')
    
